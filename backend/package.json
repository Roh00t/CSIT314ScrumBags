{
    "name": "scrumbags-server",
    "version": "1.0.0",
    "description": "ExpressJS backend server for our CSIT314 group project",
    "main": "index.js",
    "scripts": {
        "start": "node ./dist/index.js",
        "build": "rimraf ./dist && tsc",
        "dev": "nodemon --watch \"src/**/*.ts\" --ext \"ts,json\" --ignore \"src/**/*.test.ts\" --exec \"npx ts-node ./src/index.ts\"",
        "dev:setup": "ts-node ./misc/setup.ts",
        "tests": "cross-env NODE_ENV=test jest --detectOpenHandles",
        "db:push": "drizzle-kit push",
        "db:push:test": "cross-env NODE_ENV=test drizzle-kit push",
        "db:seed": "ts-node ./src/db/seeding/seed.ts",
        "db:seed:base": "ts-node ./src/db/seeding/seedBaseAccountsOnly.ts"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/supertest": "^6.0.3",
        "bcrypt": "^5.1.1",
        "connect-pg-simple": "^10.0.0",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.41.0",
        "express": "^5.1.0",
        "express-session": "^1.18.1",
        "http-status-codes": "^2.3.0",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0",
        "pg": "^8.14.1",
        "swagger-ui-express": "^5.0.1",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@faker-js/faker": "^9.7.0",
        "@jest/globals": "^29.7.0",
        "@types/bcrypt": "^5.0.2",
        "@types/connect-pg-simple": "^7.0.3",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/express-session": "^1.18.1",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.14.1",
        "@types/pg": "^8.11.12",
        "@types/swagger-ui-express": "^4.1.8",
        "cross-env": "^7.0.3",
        "drizzle-kit": "^0.30.6",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "supertest": "^7.1.0",
        "ts-jest": "^29.3.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3"
    }
}
